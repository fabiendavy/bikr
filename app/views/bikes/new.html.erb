<div class="container">
  <div class="row justify-content-center mt-4 form-card back">
    <div class="col-6">
      <h1 class="my-3 text-center">Add a new bike </h1>


        <%= simple_form_for :search, url: root_path, method: :get do |f| %>
          <div class="search-form-control">
            <p>What kind of bike do you have ?</p>
            <%= f.input :bike_type, label: false, collection: Bike::BIKE_TYPES, class: "select2" %>
            <%= f.input :location, placeholder: "Anywhere", label: false, id:'location_field' %>
            <%= f.input :price_per_day, label: false, placeholder: "â‚¬/day", as: :range %>
            <%= f.input :description, label: false, placeholder: "Please describe your bike" %>
            <%= f.submit "Add my bike", class: "btn btn-new-flat" %>
          </div>
      <% end %>

