<div class="container-fluid">
  <div class="row justify-content-between">
    <div id="map"
         class="col-sm-12 col-md-6 col-lg-6"
         style="width: 50%;
         height: 90vh"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

    <div class="col-sm-12 col-md-6 col-lg-6">
      <div class="bike-cards">
        <% @bikes.each do |bike| %>
          <%= link_to bike_path(bike) do %>
            <div class="card-product mb-3 ml-3">
              <% if bike.photo.attached? %>
                <%= cl_image_tag bike.photo.key %>
              <% else %>
                <%= image_tag "https://source.unsplash.com/featured/?bike(160 kB)" %>
              <% end %>
              <div class="card-product-infos">
                <h2><%= bike.bike_type %></h2>
                <h2 class="bike-price"><%= bike.price_per_day %>â‚¬<span style="font-size: 10px">/day</span></h2>
                <p><strong><%= bike.location %></strong></p>
                <p><%= bike.description %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

